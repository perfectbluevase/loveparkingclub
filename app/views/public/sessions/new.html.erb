<div class="container text-center">
  <div class="row align-items-center">
    <div class="col-1">
    </div>
    
      <div class="card col-10 border border-success" style="width: 50px; height: 300px;">
      <div class="card-body">
        <p class="card-text">
        <h2>Sign_in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>
      </div>
      <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit "GO" %>
    </div>
    <% end %>
    <%= render "public/shared/links" %>
        </p>
      </div>
    </div>
    
    <div class="col-1">
    </div>
  </div>
</div>


