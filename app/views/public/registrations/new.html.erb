 <%= render "public/shared/error_messages", resource: resource %>

<div class="container text-center">
  <div class="row align-items-center pt-3 pb-2">
    <div class="col-1">
    </div>
    
      <div class="card col-10 border border-success" style="width: 50px; height: 300px;">
      <div class="card-body">
        <p class="card-text">
        <h2>Sign_up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.text_field :user_name, autocomplete: "user_name", placeholder: "ニックネーム" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認用" %>
  </div>

  <div class="actions pt-3">
    <%= f.submit "Go", class: 'rounded-0' %>
  </div>
<% end %>

<%= render "public/shared/links" %>

      </div>
    </div>
    
    <div class="col-1">
    </div>
  </div>
</div>

